@model SacramentPlanner.Models.SacramentPlan

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
    <div>
        <h4>Sacrament Plan</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Conducting)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Conducting)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Invocation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Invocation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OpeningHymn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OpeningHymn.HymnTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SacramentHymn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SacramentHymn.HymnTitle)
            </dd>
            @foreach (var item in ViewBag.speaker)
            {
                <dt class="col-sm-2">
                    Speaker
                </dt>
                <dd class="col-sm-10">
                    @item.Name speaking on @item.Topic
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ClosingHymn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClosingHymn.HymnTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Benediction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Benediction)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>